!-------------------------------------------------------------------------------
! general model setup
!-------------------------------------------------------------------------------
!
! sim_name  [string]
!               title of simulation
! nlev      [integer, minimum = 1, maximum = 1000]
!               Number of depth levels used to describe the water column
!
! wq_sw     WQ modelling sw (.FALSE.=off,.TRUE.=on)
! Kw        background light attenuation (m**-1)
!
!-------------------------------------------------------------------------------
&glm_setup
   sim_name = 'Simulation name'
   max_layers = 1000
   min_layer_vol = 0.5
   min_layer_thick = 0.1
   max_layer_thick = 1.0
   Kw = 1.0268
   coef_inf_entrain = 0
   coef_mix_conv = 0.23
   coef_wind_stir = .23      
   coef_mix_shear = 0.3
   coef_mix_turb = 0.51       
   coef_mix_KH = 0.3 
/

